boxColor = #6d6d6d
section
	padding: 10px
	background: #f5f5f5
.img-container
	text-align: center
	padding: 10px
	img 
		max-width: 100%
.provider-info 
	border: 2px solid boxColor
	border-radius: 10px
	max-width: 250px
	text-align: left
	float: right
	width: 100%
	overflow hidden
	background: #fff
	.head
		background: boxColor
		color: #ffffff
		text-align: center
		padding: 5px
	.data
		ul 
			margin: 0
			padding: 0
			li 
				list-style: none
				padding: 10px 5px
				color: #272727
				>a
					text-decoration: none
					color: #272727
.detail-box
	display flex
	justify-content: space-evenly
	padding: 10px
	.img-box 
		display: flex
		flex-wrap: wrap
		justify-content: center
		align-items: center
		.img-container
			max-width: 200px
			img 
				max-width: 100%
.rating-container
	padding: 10px
.description
	background: #f0f7f8
	border: 1px solid #afafaf
	padding: 15px;
	border-radius: 10px

.btn-group
	display flex
	justify-content: space-between
	button,a
		background: #fff;
		color: #81cc60
		padding: 7px
		border: 1px solid #bef5a9
		border-radius: 5px
		font-size: 1.2rem
		margin-top: 10px
	a 
		text-decoration: none



@media screen and (max-width : 480px) 
	.detail-box
		display block
		.provider-info
			clear both
			float: none
			max-width: 100%